<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- Console appender for logging to the console -->
	<appender name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%black(%d{yyyy-MM-dd HH:mm:ss}) [%blue(%thread)] %highlight(%-5level) %yellow(%logger[%L])- %msg%n</pattern>
		</encoder>
	</appender>

	<!-- File appender for INFO level /opt/logs -->
	<appender name="INFO_FILE"
		class="ch.qos.logback.core.FileAppender">
		<file>/opt/logs/spds_admin_info.log</file>
		<!-- Size-based rolling policy with zip compression for archived files -->
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>/opt/logs/spds_admin_info-%d{yyyy-MM-dd-HH}.%i.zip
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize> <!-- Max size before rollover -->
			<maxHistory>30</maxHistory> <!-- Keep 30 days of history -->
			<cleanHistoryOnStart>false</cleanHistoryOnStart> <!-- Do not clean history on app start -->
		</rollingPolicy>

		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger[%L]- %msg%n</pattern>
		</encoder>
		<!-- <threshold level="INFO" /> -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
	</appender>

	<!-- File appender for DEBUG level /opt/logs -->
	<appender name="DEBUG_FILE"
		class="ch.qos.logback.core.FileAppender">
		<file>/opt/logs/spds_admin_debug.log</file>
		<!-- Size-based rolling policy with zip compression for archived files -->
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>/opt/logs/spds_admin_debug-%d{yyyy-MM-dd-HH}.%i.zip
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize> <!-- Max size before rollover -->
			<maxHistory>30</maxHistory> <!-- Keep 30 days of history -->
			<cleanHistoryOnStart>false</cleanHistoryOnStart> <!-- Do not clean history on app start -->
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger[%L]- %msg%n</pattern>
		</encoder>
		<!-- <threshold level="DEBUG" /> -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
	</appender>

	<!-- File appender for ERROR level /opt/logs -->
	<appender name="ERROR_FILE"
		class="ch.qos.logback.core.FileAppender">
		<file>/opt/logs/spds_admin_error.log</file>
		<!-- Size-based rolling policy with zip compression for archived files -->
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>/opt/logs/spds_admin_error-%d{yyyy-MM-dd-HH}.%i.zip
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize> <!-- Max size before rollover -->
			<maxHistory>30</maxHistory> <!-- Keep 30 days of history -->
			<cleanHistoryOnStart>false</cleanHistoryOnStart> <!-- Do not clean history on app start -->
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger[%L]- %msg%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
	</appender>

	<!-- Root logger configuration to use different log levels -->
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="INFO_FILE" />
		<appender-ref ref="DEBUG_FILE" />
		<appender-ref ref="ERROR_FILE" />
	</root>

</configuration>
